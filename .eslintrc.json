{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "semi" : [2, "always"],
        "max-len": [2, 200, 2],
        "no-console": "warn",
        "no-alert": "warn",
        "prefer-const": ["error"],
        "react/no-danger": 0
    }
}
